{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "ServerlessDeploymentBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "ServerlessDeploymentBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": "s3:*",
              "Effect": "Deny",
              "Principal": "*",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      },
                      "/*"
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      }
                    ]
                  ]
                }
              ],
              "Condition": {
                "Bool": {
                  "aws:SecureTransport": false
                }
              }
            }
          ]
        }
      }
    },
    "HelloLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/test-lambda"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "aggregate-service",
                  "default",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-lambda:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-lambda:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "aggregate-service",
              "default",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "HelloLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/aggregate-service/default/1633463781130-2021-10-05T19:56:21.130Z/aggregate-service.zip"
        },
        "Handler": "./serverless/handler.hello",
        "Runtime": "nodejs12.x",
        "FunctionName": "test-lambda",
        "MemorySize": 1024,
        "Timeout": 6,
        "Description": "A test lambda",
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "HelloLogGroup"
      ]
    },
    "HelloLambdaVersionrfFZkZTr6SUAKdt3LxCzxA0F3OWPtvYqG9C3O6MNLo": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "HelloLambdaFunction"
        },
        "CodeSha256": "2B3Fbw6t5X2NUHy/k9f13yJeNRHv7qnN4mKaNqBIY3U=",
        "Description": "A test lambda"
      }
    },
    "S3Assets": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "BUCKET_NAME"
      }
    },
    "BlockBatchTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "AWS_DYNAMODB_BLOCK_BATCH_TABLE_NAME",
        "AttributeDefinitions": [
          {
            "AttributeName": "BatchId",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "BatchId",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 25,
          "WriteCapacityUnits": 25
        }
      }
    },
    "BlockMetadataTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "AWS_DYNAMODB_BLOCK_METADATA_TABLE_NAME",
        "AttributeDefinitions": [
          {
            "AttributeName": "BlockHeight",
            "AttributeType": "N"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "BlockHeight",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 25,
          "WriteCapacityUnits": 25
        }
      }
    },
    "ServiceMetadataTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "AWS_DYNAMODB_SERVICE_METADATA_TABLE_NAME",
        "AttributeDefinitions": [
          {
            "AttributeName": "Property",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "Property",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 25,
          "WriteCapacityUnits": 25
        }
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      },
      "Export": {
        "Name": "sls-aggregate-service-default-ServerlessDeploymentBucketName"
      }
    },
    "HelloLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "HelloLambdaVersionrfFZkZTr6SUAKdt3LxCzxA0F3OWPtvYqG9C3O6MNLo"
      },
      "Export": {
        "Name": "sls-aggregate-service-default-HelloLambdaFunctionQualifiedArn"
      }
    }
  }
}